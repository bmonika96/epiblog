    package="si.uni_lj.fe.modulg.epiblog">
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_journal_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_journal_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Epiblog">
        <activity android:name=".OpisDogodka"></activity>
        <activity android:name=".NovVnos" android:windowSoftInputMode="adjustResize"/>/>
        <activity android:name=".Zgodovina" />
        <activity android:name=".Registracija" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>