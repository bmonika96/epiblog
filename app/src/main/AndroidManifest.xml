<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="si.uni_lj.fe.modulg.epiblog">

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_epiblog_diary_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_epiblog_diary_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Epiblog"
        >
        <activity android:name=".Nastavitve" android:screenOrientation="portrait"></activity>
        <activity android:name=".OpisDogodka" android:screenOrientation="portrait"/>
        <activity
            android:name=".NovVnos"
            android:windowSoftInputMode="adjustResize" android:screenOrientation="portrait"/>
        <activity android:name=".Zgodovina" android:screenOrientation="portrait"/>
        <activity android:name=".Registracija" android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity" android:launchMode="singleTask" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>