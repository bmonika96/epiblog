<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <TextView android:id="@+id/opis_dogodka_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/opis_dogodka_header"
        android:layout_weight="2"
        android:textSize="20sp"
        android:gravity="center"
        android:background="#7DBFC7"
        android:textColor="@color/white"
        android:textStyle="bold"
/>

    <TextView android:id="@+id/opis_dogodka_cas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/xml_1_cas_napada"
        android:layout_weight="2"
        android:textSize="20sp"
        android:gravity="center"
        android:background="#E1FAFA"
        android:layout_marginBottom="2dp"
        />

    <TextView android:id="@+id/opis_dogodka_trajanje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/xml_2_trajanje_napada"
        android:layout_weight="2"
        android:textSize="20sp"
        android:gravity="center"
        android:background="#C5F1F6"
        android:layout_marginBottom="2dp"/>

    <TextView android:id="@+id/opis_dogodka_intenzivnost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/xml_3_intenzivnost"
        android:layout_weight="2"
        android:textSize="20sp"
        android:gravity="center"
        android:background="#ABDDE2"
        android:layout_marginBottom="2dp"/>

    <TextView android:id="@+id/opis_dogodka_moznisprozilci"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/opis_dogodka_4_sprozilci"
        android:layout_weight="2"
        android:textSize="20sp"
        android:gravity="center"
        android:background="#A9F9F9"/>

    <com.google.android.material.button.MaterialButton
        style="?attr/materialButtonOutlinedStyle"
        android:id="@+id/opis_dogodka_izbrisi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="@string/opis_dogodka_izbrisi"
        android:textColor="#F65A5A"
        android:textSize="15sp"
        app:cornerRadius="5dp"
        app:strokeColor="#F65A5A"
        app:strokeWidth="1dp"
        android:onClick="izbrisi_zgo"/>

    <TextView android:id="@+id/opis_dogodka_poslano_stevilka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/opis_dogodka_stevilka_sms"
        android:layout_weight="1"
        android:textSize="15sp"
        android:gravity="center"
/>

    <TextView android:id="@+id/opis_dogodka_stevilka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_weight="1"
        android:textSize="15sp"
        android:gravity="center"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="center"
        >
        <Button
            android:id="@+id/opis_dogodka_nazaj"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:onClick="pojdi_nazaj"
            android:text="@string/xml_nazaj"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/opis_dogodka_posljisms"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:onClick="poslji_sms"
            android:text="@string/xml_poslji_sms"
            android:textSize="20sp" />
    </LinearLayout>
    </LinearLayout>

<com.google.android.material.bottomnavigation.BottomNavigationView
android:id="@+id/app_bar_menu"
android:layout_height="wrap_content"
android:layout_width="match_parent"
app:menu="@menu/app_bar_menu"
android:layout_alignParentBottom="true"
    />

</RelativeLayout>